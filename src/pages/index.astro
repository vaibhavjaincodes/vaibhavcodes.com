---
// Homepage for vaibhavcodes.com
import { getCollection } from 'astro:content';
import '../styles/global.css';

// Get recent blog posts
const posts = await getCollection('blog', ({ data }) => {
  return data.draft !== true;
});

// Sort posts by publish date (newest first) and get the latest 2
const recentPosts = posts
  .sort((a, b) => b.data.publishDate.valueOf() - a.data.publishDate.valueOf())
  .slice(0, 2);
---

<html lang="en">
	<head>
		<meta charset="utf-8" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="viewport" content="width=device-width" />
		<meta name="generator" content={Astro.generator} />
		<title>Vaibhav Jain - Software Engineer & Technical Educator</title>
		<meta name="description" content="Software Engineer sharing insights on how technology works under the hood. Building DeepTech Visual Academy and teaching engineers." />
	</head>
	<body class="font-sans bg-white">
		<!-- Header -->
		<header class="bg-white/95 backdrop-blur-sm border-b border-slate-200 sticky top-0 z-50">
			<nav class="flex justify-between items-center py-5 px-6 max-w-6xl mx-auto">
				<div class="text-xl font-extrabold text-slate-900 tracking-tight">
					<a href="/" class="hover:text-indigo-600 transition-colors">Vaibhav Jain</a>
				</div>
				<ul class="flex gap-10 list-none">
					<li><a href="/blog" class="text-slate-600 font-medium text-sm hover:text-indigo-600 transition-colors">Blog</a></li>
					<li><a href="/courses" class="text-slate-600 font-medium text-sm hover:text-indigo-600 transition-colors">Courses</a></li>
					<li><a href="/papers" class="text-slate-600 font-medium text-sm hover:text-indigo-600 transition-colors">Papers</a></li>
					<li><a href="/books" class="text-slate-600 font-medium text-sm hover:text-indigo-600 transition-colors">Books</a></li>
				</ul>
			</nav>
		</header>

		<main>
			<!-- Hero Section -->
			<section class="bg-gradient-to-br from-slate-900 via-slate-800 to-slate-700 text-white py-32 relative overflow-hidden">
				<!-- Background gradient effects -->
				<div class="absolute inset-0">
					<div class="absolute top-0 left-1/4 w-72 h-72 bg-purple-400/20 rounded-full blur-3xl"></div>
					<div class="absolute bottom-0 right-1/4 w-96 h-96 bg-pink-400/20 rounded-full blur-3xl"></div>
				</div>
				
				<div class="max-w-5xl mx-auto px-6 relative z-10">
					<div class="flex items-center gap-16 max-lg:flex-col max-lg:gap-8 max-lg:text-center">
						<div class="flex-shrink-0">
							<img src="/vaibhav-jain.jpg" alt="Vaibhav Jain - Software Engineer" 
								 class="w-56 h-auto max-h-72 rounded-2xl object-cover border-4 border-white/20 shadow-2xl hover:scale-105 transition-transform duration-300 max-lg:w-44">
						</div>
						<div class="flex-1">
							<h1 class="text-3xl md:text-4xl xl:text-5xl font-extrabold leading-tight mb-6 tracking-tight">
								Software Engineer sharing insights on how technology works under the hood.
							</h1>
							<p class="text-lg md:text-xl text-white/90 mb-12 leading-relaxed max-w-2xl">
								Building DeepTech Visual Academy and teaching engineers the how and why behind the tech they use every day.
							</p>
							<div class="flex gap-4 max-sm:flex-col">
								<a href="/blog" class="bg-white text-indigo-600 px-8 py-4 rounded-xl font-semibold shadow-lg hover:bg-slate-50 hover:-translate-y-1 hover:shadow-xl transition-all duration-300">
									Read Latest Posts
								</a>
								<a href="/courses" class="border-2 border-white/30 text-white px-8 py-4 rounded-xl font-semibold backdrop-blur-sm hover:bg-white/10 hover:border-white hover:-translate-y-1 transition-all duration-300">
									Explore Courses
								</a>
							</div>
						</div>
					</div>
				</div>
			</section>

			<!-- About Section -->
			<section class="py-24 bg-slate-50">
				<div class="max-w-6xl mx-auto px-6">
					<h2 class="text-center text-4xl font-extrabold text-slate-900 mb-16 tracking-tight">What I Do</h2>
					<div class="grid md:grid-cols-3 gap-8">
						<div class="bg-white p-8 rounded-2xl shadow-lg border border-slate-200 hover:-translate-y-2 hover:shadow-xl transition-all duration-300 group">
							<div class="w-12 h-12 bg-indigo-100 rounded-xl flex items-center justify-center mb-6 group-hover:bg-indigo-200 transition-colors">
								<svg class="w-6 h-6 text-indigo-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
									<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
								</svg>
							</div>
							<h3 class="text-indigo-600 text-xl font-bold mb-4">Technical Writing</h3>
							<p class="text-slate-600 leading-relaxed">Deep dives into how software systems work, from databases to distributed systems.</p>
						</div>
						<div class="bg-white p-8 rounded-2xl shadow-lg border border-slate-200 hover:-translate-y-2 hover:shadow-xl transition-all duration-300 group">
							<div class="w-12 h-12 bg-indigo-100 rounded-xl flex items-center justify-center mb-6 group-hover:bg-indigo-200 transition-colors">
								<svg class="w-6 h-6 text-indigo-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
									<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.246 18 16.5 18c-1.746 0-3.332.477-4.5 1.253"></path>
								</svg>
							</div>
							<h3 class="text-indigo-600 text-xl font-bold mb-4">Course Creation</h3>
							<p class="text-slate-600 leading-relaxed">Building visual learning experiences that make complex concepts accessible.</p>
						</div>
						<div class="bg-white p-8 rounded-2xl shadow-lg border border-slate-200 hover:-translate-y-2 hover:shadow-xl transition-all duration-300 group">
							<div class="w-12 h-12 bg-indigo-100 rounded-xl flex items-center justify-center mb-6 group-hover:bg-indigo-200 transition-colors">
								<svg class="w-6 h-6 text-indigo-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
									<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v10a2 2 0 002 2h8a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2m-3 7h3m-3 4h3m-6-4h.01M9 16h.01"></path>
								</svg>
							</div>
							<h3 class="text-indigo-600 text-xl font-bold mb-4">Research</h3>
							<p class="text-slate-600 leading-relaxed">Summarizing cutting-edge papers and books to distill key insights.</p>
						</div>
					</div>
				</div>
			</section>

			<!-- Content Preview Section -->
			<section class="py-24 bg-white">
				<div class="max-w-6xl mx-auto px-6">
					<h2 class="text-center text-4xl font-extrabold text-slate-900 mb-16 tracking-tight">Latest Content</h2>
					<div class="grid md:grid-cols-2 xl:grid-cols-4 gap-6">
						<!-- Recent Posts -->
						<div class="bg-white border border-slate-200 rounded-xl p-6 hover:shadow-lg hover:border-indigo-200 transition-all duration-300 relative overflow-hidden group">
							<div class="absolute top-0 left-0 w-full h-1 bg-gradient-to-r from-indigo-500 to-purple-500 transform scale-x-0 group-hover:scale-x-100 transition-transform duration-300"></div>
							<h3 class="text-lg font-bold text-slate-900 mb-4">
								<a href="/blog" class="hover:text-indigo-600 transition-colors">Recent Posts</a>
							</h3>
							{recentPosts.length > 0 ? (
								<div class="space-y-4">
									{recentPosts.map(post => (
										<article class="group/post">
											<h4 class="font-semibold text-sm mb-2">
												<a href={`/blog/${post.slug}`} class="text-slate-900 hover:text-indigo-600 transition-colors line-clamp-2">{post.data.title}</a>
											</h4>
											<p class="text-xs text-slate-600 mb-2 line-clamp-2">{post.data.description}</p>
											<time class="text-xs text-slate-500">{post.data.publishDate.toLocaleDateString('en-US', {
												month: 'short',
												day: 'numeric',
												year: 'numeric'
											})}</time>
										</article>
									))}
								</div>
							) : (
								<p class="text-slate-600 text-sm">Coming soon - Technical deep dives and system design insights</p>
							)}
						</div>

						<!-- Courses -->
						<div class="bg-white border border-slate-200 rounded-xl p-6 hover:shadow-lg hover:border-indigo-200 transition-all duration-300 relative overflow-hidden group">
							<div class="absolute top-0 left-0 w-full h-1 bg-gradient-to-r from-indigo-500 to-purple-500 transform scale-x-0 group-hover:scale-x-100 transition-transform duration-300"></div>
							<h3 class="text-lg font-bold text-slate-900 mb-4">
								<a href="/courses" class="hover:text-indigo-600 transition-colors">Courses</a>
							</h3>
							<p class="text-slate-600 text-sm">Coming soon - DeepTech Visual Academy courses</p>
						</div>

						<!-- Papers -->
						<div class="bg-white border border-slate-200 rounded-xl p-6 hover:shadow-lg hover:border-indigo-200 transition-all duration-300 relative overflow-hidden group">
							<div class="absolute top-0 left-0 w-full h-1 bg-gradient-to-r from-indigo-500 to-purple-500 transform scale-x-0 group-hover:scale-x-100 transition-transform duration-300"></div>
							<h3 class="text-lg font-bold text-slate-900 mb-4">
								<a href="/papers" class="hover:text-indigo-600 transition-colors">Paper Summaries</a>
							</h3>
							<p class="text-slate-600 text-sm">Coming soon - Key insights from research papers</p>
						</div>

						<!-- Books -->
						<div class="bg-white border border-slate-200 rounded-xl p-6 hover:shadow-lg hover:border-indigo-200 transition-all duration-300 relative overflow-hidden group">
							<div class="absolute top-0 left-0 w-full h-1 bg-gradient-to-r from-indigo-500 to-purple-500 transform scale-x-0 group-hover:scale-x-100 transition-transform duration-300"></div>
							<h3 class="text-lg font-bold text-slate-900 mb-4">
								<a href="/books" class="hover:text-indigo-600 transition-colors">Book Reviews</a>
							</h3>
							<p class="text-slate-600 text-sm">Coming soon - Technical book summaries and takeaways</p>
						</div>
					</div>
				</div>
			</section>
		</main>

		<!-- Footer -->
		<footer class="bg-slate-900 text-slate-400 py-12 text-center">
			<div class="max-w-6xl mx-auto px-6">
				<p class="text-sm">&copy; 2025 Vaibhav Jain. Building the future, one explanation at a time.</p>
			</div>
		</footer>
	</body>
</html>
