---
// Homepage for vaibhavcodes.com
import { getCollection } from 'astro:content';

// Get recent blog posts
const posts = await getCollection('blog', ({ data }) => {
  return data.draft !== true;
});

// Sort posts by publish date (newest first) and get the latest 2
const recentPosts = posts
  .sort((a, b) => b.data.publishDate.valueOf() - a.data.publishDate.valueOf())
  .slice(0, 2);
---

<html lang="en">
	<head>
		<meta charset="utf-8" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="viewport" content="width=device-width" />
		<meta name="generator" content={Astro.generator} />
		<title>Vaibhav Jain - Software Engineer & Technical Educator</title>
		<meta name="description" content="Software Engineer sharing insights on how technology works under the hood. Building DeepTech Visual Academy and teaching engineers." />
	</head>
	<body>
		<header class="header">
			<nav class="nav">
				<div class="nav-brand">
					<a href="/">Vaibhav Jain</a>
				</div>
				<ul class="nav-links">
					<li><a href="/blog">Blog</a></li>
					<li><a href="/courses">Courses</a></li>
					<li><a href="/papers">Papers</a></li>
					<li><a href="/books">Books</a></li>
				</ul>
			</nav>
		</header>

		<main>
			<section class="hero">
				<div class="container">
					<div class="hero-content">
						<div class="hero-image">
							<img src="/vaibhav-jain.jpg" alt="Vaibhav Jain - Software Engineer" class="profile-photo">
						</div>
						<div class="hero-text">
							<h1>Software Engineer sharing insights on how technology works under the hood.</h1>
							<p class="lead">Building DeepTech Visual Academy and teaching engineers the how and why behind the tech they use every day.</p>
							<div class="hero-actions">
								<a href="/blog" class="btn btn-primary">Read Latest Posts</a>
								<a href="/courses" class="btn btn-secondary">Explore Courses</a>
							</div>
						</div>
					</div>
				</div>
			</section>

			<section class="about">
				<div class="container">
					<h2>What I Do</h2>
					<div class="about-grid">
						<div class="about-card">
							<h3>Technical Writing</h3>
							<p>Deep dives into how software systems work, from databases to distributed systems.</p>
						</div>
						<div class="about-card">
							<h3>Course Creation</h3>
							<p>Building visual learning experiences that make complex concepts accessible.</p>
						</div>
						<div class="about-card">
							<h3>Research</h3>
							<p>Summarizing cutting-edge papers and books to distill key insights.</p>
						</div>
					</div>
				</div>
			</section>

			<section class="content-preview">
				<div class="container">
					<h2>Latest Content</h2>
					<div class="content-grid">
						<div class="content-section">
							<h3><a href="/blog">Recent Posts</a></h3>
							{recentPosts.length > 0 ? (
								<div class="recent-posts">
									{recentPosts.map(post => (
										<article class="recent-post">
											<h4><a href={`/blog/${post.slug}`}>{post.data.title}</a></h4>
											<p>{post.data.description}</p>
											<time>{post.data.publishDate.toLocaleDateString('en-US', {
												month: 'short',
												day: 'numeric',
												year: 'numeric'
											})}</time>
										</article>
									))}
								</div>
							) : (
								<p>Coming soon - Technical deep dives and system design insights</p>
							)}
						</div>
						<div class="content-section">
							<h3><a href="/courses">Courses</a></h3>
							<p>Coming soon - DeepTech Visual Academy courses</p>
						</div>
						<div class="content-section">
							<h3><a href="/papers">Paper Summaries</a></h3>
							<p>Coming soon - Key insights from research papers</p>
						</div>
						<div class="content-section">
							<h3><a href="/books">Book Reviews</a></h3>
							<p>Coming soon - Technical book summaries and takeaways</p>
						</div>
					</div>
				</div>
			</section>
		</main>

		<footer class="footer">
			<div class="container">
				<p>&copy; 2025 Vaibhav Jain. Building the future, one explanation at a time.</p>
			</div>
		</footer>
	</body>
</html>

<style>
	/* Reset and base styles */
	* {
		margin: 0;
		padding: 0;
		box-sizing: border-box;
	}

	:root {
		--primary: #1a1a1a;
		--secondary: #6366f1;
		--accent: #f8fafc;
		--text: #334155;
		--text-light: #64748b;
		--border: #e2e8f0;
		--surface: #ffffff;
		--gradient: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
	}

	body {
		font-family: 'Inter', -apple-system, BlinkMacSystemFont, 'Segoe UI', sans-serif;
		line-height: 1.7;
		color: var(--text);
		background: var(--surface);
		font-size: 16px;
	}

	.container {
		max-width: 1100px;
		margin: 0 auto;
		padding: 0 1.5rem;
	}

	/* Header */
	.header {
		background: rgba(255, 255, 255, 0.95);
		backdrop-filter: blur(10px);
		border-bottom: 1px solid var(--border);
		position: sticky;
		top: 0;
		z-index: 100;
	}

	.nav {
		display: flex;
		justify-content: space-between;
		align-items: center;
		padding: 1.25rem 1.5rem;
		max-width: 1100px;
		margin: 0 auto;
	}

	.nav-brand a {
		font-size: 1.375rem;
		font-weight: 800;
		text-decoration: none;
		color: var(--primary);
		letter-spacing: -0.025em;
	}

	.nav-links {
		display: flex;
		list-style: none;
		gap: 2.5rem;
	}

	.nav-links a {
		text-decoration: none;
		color: var(--text-light);
		font-weight: 500;
		font-size: 0.95rem;
		transition: all 0.2s ease;
		position: relative;
	}

	.nav-links a:hover {
		color: var(--secondary);
	}

	.nav-links a::after {
		content: '';
		position: absolute;
		width: 0;
		height: 2px;
		bottom: -5px;
		left: 0;
		background: var(--secondary);
		transition: width 0.2s ease;
	}

	.nav-links a:hover::after {
		width: 100%;
	}

	/* Hero */
	.hero {
		background: linear-gradient(135deg, #0f172a 0%, #1e293b 50%, #334155 100%);
		color: white;
		padding: 8rem 0 6rem;
		text-align: center;
		position: relative;
		overflow: hidden;
	}

	.hero::before {
		content: '';
		position: absolute;
		top: 0;
		left: 0;
		right: 0;
		bottom: 0;
		background: 
			radial-gradient(circle at 20% 80%, rgba(120, 119, 198, 0.3) 0%, transparent 50%),
			radial-gradient(circle at 80% 20%, rgba(255, 119, 198, 0.3) 0%, transparent 50%);
	}

	.hero .container {
		position: relative;
		z-index: 2;
	}

	.hero-content {
		display: flex;
		align-items: center;
		gap: 4rem;
		max-width: 1000px;
		margin: 0 auto;
	}

	.hero-image {
		flex-shrink: 0;
	}

	.profile-photo {
		width: 220px;
		height: auto;
		max-height: 280px;
		border-radius: 20px;
		object-fit: cover;
		object-position: center top;
		border: 4px solid rgba(255, 255, 255, 0.2);
		box-shadow: 0 10px 30px rgba(0, 0, 0, 0.3);
		transition: transform 0.3s ease;
	}

	.profile-photo:hover {
		transform: scale(1.05);
	}

	.hero-text {
		flex: 1;
		text-align: left;
	}

	.hero h1 {
		font-size: clamp(2.2rem, 4vw, 3.2rem);
		margin-bottom: 1.5rem;
		font-weight: 800;
		letter-spacing: -0.05em;
		line-height: 1.1;
	}

	.lead {
		font-size: 1.375rem;
		margin-bottom: 3rem;
		opacity: 0.95;
		max-width: 700px;
		margin-left: auto;
		margin-right: auto;
		font-weight: 400;
		line-height: 1.6;
	}

	.hero-actions {
		display: flex;
		gap: 1rem;
		justify-content: center;
		flex-wrap: wrap;
	}

	.btn {
		display: inline-flex;
		align-items: center;
		padding: 1rem 2rem;
		border-radius: 12px;
		text-decoration: none;
		font-weight: 600;
		font-size: 1rem;
		transition: all 0.3s ease;
		border: 2px solid transparent;
	}

	.btn:hover {
		transform: translateY(-2px);
		box-shadow: 0 10px 30px rgba(0,0,0,0.15);
	}

	.btn-primary {
		background: white;
		color: var(--secondary);
		box-shadow: 0 4px 15px rgba(0,0,0,0.1);
	}

	.btn-primary:hover {
		background: var(--accent);
	}

	.btn-secondary {
		background: transparent;
		color: white;
		border-color: rgba(255,255,255,0.3);
		backdrop-filter: blur(10px);
	}

	.btn-secondary:hover {
		background: rgba(255,255,255,0.1);
		border-color: white;
	}

	/* About */
	.about {
		padding: 6rem 0;
		background: var(--accent);
	}

	.about h2 {
		text-align: center;
		margin-bottom: 4rem;
		font-size: 2.75rem;
		font-weight: 800;
		color: var(--primary);
		letter-spacing: -0.025em;
	}

	.about-grid {
		display: grid;
		grid-template-columns: repeat(auto-fit, minmax(320px, 1fr));
		gap: 2rem;
	}

	.about-card {
		background: white;
		padding: 2.5rem;
		border-radius: 20px;
		box-shadow: 0 4px 25px rgba(0,0,0,0.06);
		text-align: center;
		transition: all 0.4s ease;
		border: 1px solid var(--border);
		position: relative;
		overflow: hidden;
	}

	.about-card::before {
		content: '';
		position: absolute;
		top: 0;
		left: -100%;
		width: 100%;
		height: 100%;
		background: linear-gradient(90deg, transparent, rgba(99, 102, 241, 0.1), transparent);
		transition: left 0.5s ease;
	}

	.about-card:hover {
		transform: translateY(-10px) scale(1.02);
		box-shadow: 0 20px 50px rgba(99, 102, 241, 0.2);
		border-color: var(--secondary);
	}

	.about-card:hover::before {
		left: 100%;
	}

	.about-card h3 {
		color: var(--secondary);
		margin-bottom: 1rem;
		font-size: 1.5rem;
		font-weight: 700;
	}

	.about-card p {
		color: var(--text-light);
		line-height: 1.7;
		font-size: 1.05rem;
	}

	/* Content Preview */
	.content-preview {
		padding: 6rem 0;
		background: white;
	}

	.content-preview h2 {
		text-align: center;
		margin-bottom: 4rem;
		font-size: 2.75rem;
		font-weight: 800;
		color: var(--primary);
		letter-spacing: -0.025em;
	}

	.content-grid {
		display: grid;
		grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
		gap: 1.5rem;
	}

	.content-section {
		padding: 2rem;
		border: 1px solid var(--border);
		border-radius: 16px;
		transition: all 0.3s ease;
		background: white;
		position: relative;
		overflow: hidden;
	}

	.content-section::before {
		content: '';
		position: absolute;
		top: 0;
		left: 0;
		width: 100%;
		height: 3px;
		background: var(--gradient);
		transform: translateX(-100%);
		transition: transform 0.3s ease;
	}

	.content-section:hover {
		transform: translateY(-3px);
		box-shadow: 0 10px 30px rgba(0,0,0,0.08);
		border-color: var(--secondary);
	}

	.content-section:hover::before {
		transform: translateX(0);
	}

	.content-section h3 {
		margin-bottom: 0.75rem;
	}

	.content-section h3 a {
		color: var(--primary);
		text-decoration: none;
		font-weight: 700;
		font-size: 1.25rem;
		transition: color 0.2s ease;
	}

	.content-section h3 a:hover {
		color: var(--secondary);
	}

	/* Recent Posts */
	.recent-posts {
		display: flex;
		flex-direction: column;
		gap: 1.5rem;
	}

	.recent-post h4 {
		margin: 0 0 0.5rem 0;
		font-size: 1.1rem;
	}

	.recent-post h4 a {
		color: var(--primary);
		text-decoration: none;
		font-weight: 600;
		transition: color 0.2s ease;
	}

	.recent-post h4 a:hover {
		color: var(--secondary);
	}

	.recent-post p {
		color: var(--text-light);
		margin: 0 0 0.5rem 0;
		font-size: 0.9rem;
		line-height: 1.5;
	}

	.recent-post time {
		color: var(--text-light);
		font-size: 0.85rem;
	}

	.content-section p {
		color: var(--text-light);
		line-height: 1.6;
		font-size: 0.95rem;
	}

	/* Footer */
	.footer {
		background: var(--primary);
		color: #94a3b8;
		padding: 3rem 0;
		text-align: center;
	}

	.footer p {
		font-size: 0.95rem;
	}

	/* Responsive */
	@media (max-width: 768px) {
		.nav {
			flex-direction: column;
			gap: 1.5rem;
			padding: 1.5rem;
		}

		.nav-links {
			gap: 2rem;
		}

		.hero {
			padding: 4rem 0 3rem;
		}

		.hero-content {
			flex-direction: column;
			gap: 2rem;
			text-align: center;
		}

		.hero-text {
			text-align: center;
		}

		.profile-photo {
			width: 180px;
			max-height: 220px;
		}

		.hero h1 {
			font-size: 2rem;
		}

		.lead {
			font-size: 1.1rem;
		}

		.hero-actions {
			flex-direction: column;
			align-items: center;
		}

		.about, .content-preview {
			padding: 4rem 0;
		}

		.about h2, .content-preview h2 {
			font-size: 2.25rem;
		}

		.about-grid {
			grid-template-columns: 1fr;
		}

		.content-grid {
			grid-template-columns: 1fr;
		}
	}

	/* Add smooth scrolling */
	html {
		scroll-behavior: smooth;
	}

	/* Loading animation for better perceived performance */
	@keyframes fadeInUp {
		from {
			opacity: 0;
			transform: translateY(20px);
		}
		to {
			opacity: 1;
			transform: translateY(0);
		}
	}

	.hero, .about, .content-preview {
		animation: fadeInUp 0.6s ease-out;
	}
</style>
